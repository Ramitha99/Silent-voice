<?xml version="1.0" encoding="utf-8"?>

                                                   

    

                 
                                  
                                                               
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#8000"
        android:orientation="horizontal" android:tag="layout/recognition_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/recognitionName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="40sp"
            android:padding="8dp"
            android:tag="binding_1"                
            android:textColor="@color/white"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Orange" />

        <TextView
            android:id="@+id/recognitionProb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="40sp"
            android:gravity="end"
            android:padding="8dp"
            android:tag="binding_2"                            
            android:textColor="@color/white"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="99%" />

    </LinearLayout>
         